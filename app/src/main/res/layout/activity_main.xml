<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input"
        android:gravity="right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="4"
        android:rowCount="4">


        <TextView
            android:id="@+id/num_1"
            style="@style/number_pad"
            android:text="1" />

        <TextView
            android:id="@+id/num_2"
            style="@style/number_pad"
            android:text="2" />

        <TextView
            android:id="@+id/num_3"
            style="@style/number_pad"
            android:text="3" />

        <TextView
            android:id="@+id/num_4"
            style="@style/number_pad"
            android:text="4" />

        <TextView
            android:id="@+id/num_5"
            style="@style/number_pad"
            android:text="5" />

        <TextView
            android:id="@+id/num_6"
            style="@style/number_pad"
            android:text="6" />

        <TextView
            android:id="@+id/num_7"
            style="@style/number_pad"
            android:text="7" />

        <TextView
            android:id="@+id/num_8"
            style="@style/number_pad"
            android:text="8" />

        <TextView
            android:id="@+id/num_9"
            style="@style/number_pad"
            android:text="9" />

        <TextView
            android:id="@+id/num_0"
            style="@style/number_pad"
            android:text="0" />

        <TextView
            android:id="@+id/plus"
            style="@style/number_pad"
            android:text="+"
            />

        <TextView
            android:id="@+id/minus"
            style="@style/number_pad"
            android:text="-"
            />

        <TextView
        android:id="@+id/multiply"
        style="@style/number_pad"
        android:text="X"
        />

        <TextView
            android:id="@+id/divide"
            style="@style/number_pad"
            android:text="/"
            />

        <TextView
            android:id="@+id/result"
            style="@style/number_pad"
            android:text="="
            />

        <TextView
            android:id="@+id/dot"
            style="@style/number_pad"
            android:text="."
            />

        <TextView
            android:id="@+id/delete"
            style="@style/number_pad"
            android:text="Del"
            />

        <TextView
            android:id="@+id/left_bracket"
            style="@style/number_pad"
            android:text="("
            />

        <TextView
            android:id="@+id/right_bracket"
            style="@style/number_pad"
            android:text=")"
            />
    </GridLayout>

</android.support.constraint.ConstraintLayout>